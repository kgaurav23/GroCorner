<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_small"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_large"
        android:background="@color/off_white">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/grocorner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Upto 69% off"
            style="@style/TextStyle"
            android:textColor="@color/green"
            android:layout_marginStart="@dimen/space_2x_large"
            app:layout_constraintStart_toEndOf="@id/img_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_sub_heading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Grocery and staples"
            style="@style/TextStyle"
            android:textColor="@color/black_70"
            android:layout_marginStart="@dimen/space_2x_large"
            android:layout_marginTop="@dimen/space_large"
            app:layout_constraintStart_toEndOf="@id/img_item"
            app:layout_constraintTop_toBottomOf="@id/tv_heading"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Evaluate new technologies and device platforms; provide feasibility assessments and accurate estimates for project implementations"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black_70"
            android:textSize="11sp"
            android:layout_marginStart="@dimen/space_2x_large"
            app:layout_constraintStart_toEndOf="@id/img_item"
            app:layout_constraintTop_toBottomOf="@id/tv_sub_heading"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>