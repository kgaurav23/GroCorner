<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/off_white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image_iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="@dimen/space_large"
        android:src="@drawable/ic_user"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_tv"
        style="@style/TextStyle.Black.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large"
        android:layout_marginBottom="@dimen/space_2x_large"
        android:text="Kumar Gaurav"
        app:layout_constraintBottom_toBottomOf="@id/user_profile_image_iv"
        app:layout_constraintStart_toEndOf="@id/user_profile_image_iv"
        app:layout_constraintTop_toTopOf="@id/user_profile_image_iv" />

    <TextView
        android:id="@+id/user_email_tv"
        style="@style/TextStyle.Black.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large"
        android:text="kg.nitjsr@gmail.com"
        app:layout_constraintStart_toEndOf="@id/user_profile_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/user_name_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>