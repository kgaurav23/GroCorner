<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textViewStyle">@style/TextStyle.Black.Medium</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/dusky_blue</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--  TextStyle Starts from here -->

    <style name="TextStyle">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <!--  NORMAL: BLACK || WHITE || GRAY -->
    <style name="TextStyle.Black" parent="TextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.White" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Gray" parent="TextStyle">
        <item name="android:textColor">@color/textColorGray</item>
    </style>

    <style name="TextStyle.Orange" parent="TextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--  BOLD: BLACK || WHITE || GRAY -->
    <style name="TextStyle.Bold.Black" parent="TextStyle.Bold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Bold.White" parent="TextStyle.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Bold.Gray" parent="TextStyle.Bold">
        <item name="android:textColor">@color/textColorGray</item>
    </style>

    <style name="TextStyle.Bold.Orange" parent="TextStyle.Bold">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--  NORMAL: TextSize variance below for each color-->

    <style name="TextStyle.Black.Small" parent="TextStyle.Black">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Black.Medium" parent="TextStyle.Black">
